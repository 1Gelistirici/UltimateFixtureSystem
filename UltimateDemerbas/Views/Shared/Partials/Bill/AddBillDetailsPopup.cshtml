@using MultiLanguage.ExtensionMethods

<div id="AddBillDetail" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" style="width: 450px;z-index:10052!important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title danger">@Html.Translate("addBillDetail")</h4>
            </div>
            <div class="scroller" style="height:370px" data-always-visible="0" data-rail-visible1="1">
                <div class="modal-body">
                    <form class="form-horizontal ng-pristine ng-invalid ng-invalid-required" name="AddBillForm">
                        <div class="col-md-9">
                            <label>@Html.Translate("No")</label>
                            <input ng-model="Pop.BillNo" type="text" class="form-control" required>
                        </div>
                        <div class="col-md-9">
                            <label>@Html.Translate("date")</label>
                            <input ng-model="Pop.BillDate" type="date" class="form-control" required>
                        </div>
                        <div class="col-md-9">
                            <span>@Html.Translate("department")</span>
                            <select class="form-control" ng-model="Pop.Department" required>
                                <option ng-repeat="x in Departments" ng-value="{{x.Value}}">{{x.Text}}</option>
                            </select>
                        </div>
                        <div class="col-md-9">
                            <span>@Html.Translate("comment")</span>
                            <br />
                            <textarea class="col-md-12" ng-model="Pop.Comment" rows="4" required></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer" style="margin-top:58%;">
                    <input type="hidden" />
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">@Html.Translate("cancel")</button>

                    <button type="submit" class="btn red" data-toggle="modal" data-target="#AddBill" ng-disabled="AddBillForm.$invalid" ng-click="Assign()">@Html.Translate("next")</button>
                </div>
            </div>
        </div>
    </div>
</div>

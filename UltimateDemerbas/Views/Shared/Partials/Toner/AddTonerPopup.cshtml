@using MultiLanguage.ExtensionMethods

<!--Add Popup-->
<div id="AddTonerPopup" class="modal fade" aria-hidden="true">
    <div class="modal-dialog" style="width: 400px;z-index:10052!important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title danger">Add Toner</h4>
            </div>
            <div style="height:510px" data-always-visible="0" data-rail-visible1="1">
                <div class="modal-body">
                    <form class="form-horizontal ng-pristine ng-invalid ng-invalid-required" name="TonerForm">
                        <div class="col-md-9">
                            <span>@Html.Translate("name")</span>
                            <input ng-model="Pop.Name" style="font-size: 14px;" type="text" class="form-control" required>
                            <br />
                            <span>@Html.Translate("piece")</span>
                            <div class="input-icon">
                                <i class="fa fa-ellipsis-v"></i>
                                <input ng-model="Pop.Piece" style="font-size: 14px;" type="number" class="form-control" required>
                            </div>
                            <br />
                            <span>@Html.Translate("boundary")</span>
                            <div class="input-icon">
                                <i class="fa fa-chevron-up"></i>
                                <input ng-model="Pop.Boundary" style="font-size: 14px;" type="number" class="form-control" required>
                            </div>
                            <br />
                            <span>@Html.Translate("minStock")</span>
                            <div class="input-icon">
                                <i class="fa fa-chevron-down"></i>
                                <input ng-model="Pop.MinStock" style="font-size: 14px;" type="number" class="form-control" required>
                            </div>
                            <br />
                            <span>@Html.Translate("price")</span>
                            <div class="input-icon">
                                <i class="fa fa-money"></i>
                                <input ng-model="Pop.Price" style="font-size: 14px;" type="number" class="form-control" required>
                            </div>
                            @*<br />
                                <div>
                                    <span>Bill</span>
                                    <select class="form-control select2" ng-model="Pop.BillRefId" required>
                                        <option ng-value="0" selected>Select</option>
                                        <option ng-repeat="x in Bills" type="number" ng-value="{{x.Id}}">{{x.BillNo}}</option>
                                    </select>
                                </div>*@
                        </div>
                    </form>
                </div>
                <div class="modal-footer" style="margin-top:100%;">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">@Html.Translate("cancel")</button>
                    <button type="submit" class="btn red" ng-disabled="TonerForm .$invalid" ng-click="AddToner()">@Html.Translate("save")</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Add Popup-->
<div id="companyUpdatePartial" class="modal fade" aria-hidden="true">
    <div class="modal-dialog" style="width: 580px;z-index:10052!important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title danger">Update Company</h4>
            </div>
            <div class="scroller" style="height: 370px" data-always-visible="0" data-rail-visible1="1">
                <div class="modal-body">
                    <form class="form-horizontal ng-pristine ng-invalid ng-invalid-required" name="companyUpdateForm">

                        <div class="form-group col-md-12">
                            <div class="fileinput fileinput-new" data-provides="fileinput">
                                <div class="fileinput-new thumbnail" style="width: 150px; height: 150px;">
                                    <img style="height: 100%;" ng-show="Pop.LogoUrl ==''" src="~/assets/layouts/layout/img/exampleLogo.png" width="150" height="150" alt="" />
                                    <img style="height: 100%;" ng-show="Pop.LogoUrl !=''" src="data:image/jpg;base64, {{Pop.LogoUrl}}" width="150" height="150" alt="" />
                                </div>

                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"> </div>
                                <div>
                                    <span class="btn default btn-file">
                                        <span class="fileinput-new">   Resim seç </span>
                                        <span class="fileinput-exists"> Değiştir </span>
                                        <input type="file" name="" ng-model="Pop.LogoUrl" id="PopImagePath" class="ImagePath" onchange="angular.element(this).scope().fileNameChanged(this)">
                                    </span>
                                    <a href="javascript:;" class="btn red fileinput-exists" data-dismiss="fileinput" ng-model="Pop.LogoUrl"> Sil </a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <span>Name</span>
                            <input ng-model="Pop.Name" style="font-size: 14px;" type="text" class="form-control" required>
                        </div>

                    </form>
                </div>
                <div class="modal-footer" style="margin-top:43%;">
                    <input type="hidden" />
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn red" ng-disabled="companyUpdateForm.$invalid" ng-click="updateCompany();">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
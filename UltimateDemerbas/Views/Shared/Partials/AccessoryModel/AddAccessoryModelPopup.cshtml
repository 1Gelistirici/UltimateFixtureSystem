<!--Add Popup-->
<div id="AddSituation" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" style="width: 400px;z-index:10052!important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title danger">Add Accessory Model</h4>
            </div>
            <div class="scroller" style="height:160px" data-always-visible="0" data-rail-visible1="1">
                <div class="modal-body">
                    <div class="col-md-9">
                        <span>Accessory Model Name</span>
                        <input ng-model="Pop.Name" style="font-size: 14px;" type="text" class="form-control">
                    </div>
                </div>
                <div class="modal-footer" style="margin-top:11%;">
                    <input type="hidden" />
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn red" ng-click="AddAccessoryModel()">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
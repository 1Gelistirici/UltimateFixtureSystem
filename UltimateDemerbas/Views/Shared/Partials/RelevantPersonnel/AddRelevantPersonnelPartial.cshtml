@using MultiLanguage.ExtensionMethods

<!--Add Popup-->
<div id="AddRelevantPersonnel" class="modal fade" aria-hidden="true">
    <div class="modal-dialog" style="width: 450px;z-index:10052!important;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title danger">@Html.Translate("addRelevantPersonnel")</h4>
            </div>
            <div class="scroller" style="height:160px" data-always-visible="0" data-rail-visible1="1">
                <div class="modal-body">
                    <div class="col-md-12">
                        <form class="form-horizontal ng-pristine ng-invalid ng-invalid-required" name="RelevantPersonnelForm">
                            <span>@Html.Translate("user")</span>
                            <select class="form-control select2" ng-model="User" required>
                                <option ng-repeat="x in Users" type="number" ng-value="{{x.Id}}">{{x.Name}} {{x.Surname}}</option>
                            </select>
                        </form>
                    </div>
                </div>
                <div class="modal-footer" style="margin-top:14%;">
                    <input type="hidden" />
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">@Html.Translate("cancel")</button>
                    <button type="submit" class="btn red" ng-disabled="RelevantPersonnelForm.$invalid" ng-click="AddRelevantPersonnel()">@Html.Translate("save")</button>
                </div>
            </div>
        </div>
    </div>
</div>
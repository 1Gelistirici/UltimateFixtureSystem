
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="DepreciationController">

    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-calculator font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">Depreciation</span>
            </div>
        </div>
        <div class="portlet-body">
            <ul class="nav nav-pills">
                <li class="active">
                    <a href="#tab_2_1" data-toggle="tab"> Normal Depreciation Method </a>
                </li>
                <li>
                    <a href="#tab_2_2" data-toggle="tab"> Decreasing Balance Method </a>
                </li>
            </ul>
            <div class="tab-content" style="height:10%">

                <div class="tab-pane fade active in col-md-12" id="tab_2_1">

                    <form name="normalDepreciationForm">

                        <div class="col-md-2">
                            <label>Cost</label>
                            <input type="number" step="0.01" ng-model="normalDepreciation.Cost" min="0" />
                        </div>

                        <div class="col-md-2">
                            <label>Life</label>
                            <input type="number" step="1" ng-model="normalDepreciation.Life" min="0" />
                        </div>

                        <button class="btn btn-success pull-right" ng-click="calculateNormalDepreciation()" ng-disabled="normalDepreciationForm.$invalid">Calculate</button>

                    </form>

                </div>
                <div class="tab-pane fade col-md-12" id="tab_2_2">

                    <form name="decreasingBalanceV1Form">

                        <div class="col-md-2">
                            <label>Cost</label>
                            <input type="number" step="0.01" ng-model="decreasingBalanceV1.Cost" min="0" />
                        </div>

                        <div class="col-md-2">
                            <label>Econmic Life</label>
                            <input type="number" step="1" ng-model="decreasingBalanceV1.EconmicLife" min="0" />
                        </div>

                        <button class="btn btn-success pull-right" ng-click="calculateDecreasingBalanceV1()" ng-disabled="decreasingBalanceV1Form.$invalid">Calculate</button>

                    </form>

                </div>

            </div>
        </div>
    </div>

    <!--Header-->
    <div class="portlet light portlet-fit bordered col-md-12">

        <!--Table Body-->
        <div class="portlet-body">
            <div ng-show="RegisterCountNormalDecreasing==0 && RegisterCountDecreasingBalance==0">
                <h3 style="text-align: center;color:#678098">Listelenecek Kayit Bulunamadi</h3>
            </div>

            <div class="table-scrollable table-scrollable-borderless" ng-show="RegisterCountNormalDecreasing>0">
                <div class="table-responsive">
                    <table class="table table-hover table-light" ng-table="TableParams" style="margin-bottom: 50px !important;">

                        <colgroup>
                            <col />
                            <col />
                            <col />
                            <col />
                            <col />
                        </colgroup>

                        <tbody>
                            <tr ng-repeat="_ in $data">
                                <td data-title="TableColNormalDecreasing.Year">
                                    <div class="col-md-9">
                                        <span>{{$index + 1}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.AccumulatedDepreciation">
                                    <div class="col-md-9">
                                        <span>{{_.AccumulatedDepreciation}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.Cost">
                                    <div class="col-md-9">
                                        <span>{{_.Cost}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.DepreciationRate">
                                    <div class="col-md-9">
                                        <span>{{_.DepreciationRate}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.PeriodDepreciation">
                                    <div class="col-md-9">
                                        <span>{{_.PeriodDepreciation}}</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="no-margin no-padding">
                                    <span class="label label-primary" style="margin-left: -20px; font-size: 11px;"> Toplam Kayit Sayisi: {{RegisterCountNormalDecreasing}}</span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="table-scrollable table-scrollable-borderless" ng-show="RegisterCountDecreasingBalance>0">
                <div class="table-responsive">
                    <table class="table table-hover table-light" ng-table="TableParams" style="margin-bottom: 50px !important;">

                        <colgroup>
                            <col />
                            <col />
                            <col />
                            <col />
                        </colgroup>

                        <tbody>
                            <tr ng-repeat="_ in $data">
                                <td data-title="TableColNormalDecreasing.Year">
                                    <div class="col-md-9">
                                        <span>{{$index + 1}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.ApplicableValue">
                                    <div class="col-md-9">
                                        <span>{{_.ApplicableValue}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.Cost">
                                    <div class="col-md-9">
                                        <span>{{_.DepreciationRate}}</span>
                                    </div>
                                </td>

                                <td data-title="TableColNormalDecreasing.DepreciationRate">
                                    <div class="col-md-9">
                                        <span>{{_.PeriodDepreciation}}</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="no-margin no-padding">
                                    <span class="label label-primary" style="margin-left: -20px; font-size: 11px;"> Toplam Kayit Sayisi: {{RegisterCountDecreasingBalance}}</span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>

</div>


@section PageScript
    {
    <script src="~/AngularControllers/Services/DepreciationService.js"></script>
    <script src="~/AngularControllers/Controllers/DepreciationController.js"></script>
}
    <!--Header-->
    <div class="portlet light portlet-fit bordered col-md-12">



        <!--Table Body-->
        <div class="portlet-body">
            <div ng-show="RegisterCount==0">
                <h3 style="text-align: center;color:#678098">Listelenecek Kayit Bulunamadi</h3>
            </div>

            <div class="table-scrollable table-scrollable-borderless" ng-show="RegisterCount>0">
                <div class="table-responsive">
                    <table class="table table-hover table-light" ng-table="TableParams" style="margin-bottom: 50px !important;">

                        <colgroup>
                            <col />
                            <col />
                            <col />
                            <col />
                            <col />
                        </colgroup>
              
                        <tbody>
                            <tr ng-repeat="_ in $data">
                                <td data-title="TableCol.Year">
                                    <div class="col-md-9">
                                        <span>{{$index + 1}}</span>
                                    </div>
                                </td>

                                <td data-title="TableCol.AccumulatedDepreciation">
                                    <div class="col-md-9">
                                        <span>{{_.AccumulatedDepreciation}}</span>
                                    </div>
                                </td>

                                <td data-title="TableCol.Cost">
                                    <div class="col-md-9">
                                        <span>{{_.Cost}}</span>
                                    </div>
                                </td>

                                <td data-title="TableCol.DepreciationRate">
                                    <div class="col-md-9">
                                        <span>{{_.DepreciationRate}}</span>
                                    </div>
                                </td>

                                <td data-title="TableCol.PeriodDepreciation">
                                    <div class="col-md-9">
                                        <span>{{_.PeriodDepreciation}}</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="no-margin no-padding">
                                    <span class="label label-primary" style="margin-left: -20px; font-size: 11px;"> Toplam Kayit Sayisi: {{RegisterCount}}</span>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>















</div>


@section PageScript
    {
    <script src="~/AngularControllers/Services/DepreciationService.js"></script>

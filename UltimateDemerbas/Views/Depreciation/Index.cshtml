
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="DepreciationController">


    <div class="portlet light bordered">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-calculator font-green-sharp"></i>
                <span class="caption-subject font-green-sharp bold uppercase">Depreciation</span>
            </div>
        </div>
        <div class="portlet-body">
            <ul class="nav nav-pills">
                <li class="active">
                    <a href="#tab_2_1" data-toggle="tab"> Fixed Annual Amount Method </a>
                </li>
                <li>
                    <a href="#tab_2_2" data-toggle="tab"> Decreasing Balance Method </a>
                </li>
                <li>
                    <a href="#tab_2_3" data-toggle="tab"> Depreciation By Production Amount Method </a>
                </li>
            </ul>
            <div class="tab-content" style="height:50%">
                <div class="tab-pane fade active in" id="tab_2_1">

                    <form name="fixedAnnualAmountForm">

                        <div class="col-md-4">
                            <label>Cost</label>
                            <input type="number" step="0.01" />
                        </div>

                        <div class="col-md-4">
                            <label>Recovery Value</label>
                            <input type="number" step="0.01" />
                        </div>

                        <div class="col-md-4">
                            <label>Economic Spine</label>
                            <input type="number" step="1" />
                        </div>

                    </form>

                </div>
                <div class="tab-pane fade" id="tab_2_2">

                    <form name="decreasingBalanceMethodForm">

                        <div class="col-md-4">
                            <label>Total Depreciation</label>
                            <input type="number" step="0.01" />
                        </div>

                    </form>

                </div>
                <div class="tab-pane fade" id="tab_2_3">

                    <form name="depreciationByProductionAmountMethodForm">

                        <div class="col-md-2">
                            <label>Asset Cost</label>
                            <input type="number" step="0.01" />
                        </div>

                        <div class="col-md-2">
                            <label>Salvage Value</label>
                            <input type="number" step="0.01" />
                        </div>

                        <div class="col-md-2">
                            <label>Production Capacity</label>
                            <input type="number" step="0.01" />
                        </div>

                        <div class="col-md-2">
                            <label>Production Amount</label>
                            <input type="number" step="0.01" />
                        </div>

                        <div class="col-md-2">
                            <label>Life Span In Years</label>
                            <input type="number" step="0.01" />
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>











</div>


@section PageScript
    {
    <script src="~/AngularControllers/Services/DepreciationService.js"></script>
    <script src="~/AngularControllers/Controllers/DepreciationController.js"></script>
}
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets1/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" />

<div ng-controller="CompanyController">

    <!--Header-->
    <div class="portlet light portlet-fit bordered col-md-12">
        <div class="portlet-title">
            <div class="caption font-dark-gray" style="color:#678098">
                <i class="fa fa-building font-dark-gray" style="color:#678098"></i>
                <span class="caption-subject bold uppercase">
                    Company
                </span>
            </div>
        </div>

        <div ng-show="RegisterCount==0">
            <h3 style="text-align: center;color:#678098">Listelenecek Kayit Bulunamadi</h3>
        </div>

        <!--Table Body-->
        <div class="portlet-body">

            <div class="table-scrollable table-scrollable-borderless" ng-show="registerCount>0">
                <form autocomplete="off" id="companyUser_form">

                    <div class="table-responsive">
                        <table class="table table-hover table-light" ng-table="TableParams" style="margin-bottom: 50px !important;">

                            <colgroup>
                                <col width="100" />
                                <col width="100" />
                                <col width="100" />
                                <col width="100" />
                            </colgroup>

                            <tbody>
                                <tr ng-repeat="_ in $data">
                                    <td data-title="TableCol.Name" filter="{ Name: 'text'}" sortable="'Name'">
                                        <div class="col-md-9">
                                            <label style="font-size: 14px;"> {{_.Name}}</label>
                                        </div>
                                    </td>
                                    <td data-title="TableCol.EstablishmentDate" filter="{ EstablishmentDate: 'text'}" sortable="'EstablishmentDate'">
                                        <div class="col-md-9">
                                            <label style="font-size: 14px;"> {{_.EstablishmentDate}}</label>
                                        </div>
                                    </td>
                                    <td data-title="TableCol.InsertDate" filter="{ InsertDate: 'text'}" sortable="'InsertDate'">
                                        <div class="col-md-9">
                                            <label style="font-size: 14px;"> {{_.InsertDate}}</label>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="btn-group absoluteitem">
                                            <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                <span class="md-click-circle md-click-animate" style="height: 105px; width: 105px; top: -47.45px; left: 37.5px;"></span>Islemler
                                                <i class="fa fa-angle-down"></i>
                                            </button>
                                            <ul class="dropdown-menu" role="menu">
                                                <li class="ms-hover">
                                                    <a class="viewuserbtn" title="Update" data-toggle="modal" ng-click="openUpdatePopup(_)">
                                                        <i class="fa fa-edit"></i>Update
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>

                            <tfoot>
                                <tr>
                                    <td colspan="6" class="no-margin no-padding">
                                        <span class="label label-primary" style="margin-left: -20px; font-size: 11px;"> Toplam Kayit Sayisi: {{registerCount}}</span>
                                    </td>
                                </tr>
                            </tfoot>

                        </table>
                    </div>
                </form>

            </div>
        </div>

    </div>

    <partial name="~/Views/Shared/Partials/Company/CompanyUpdatePartial.cshtml" />
</div>

@section PageScript
    {
    <script src="~/assets1/global/plugins/bootstrap-fileinput/bootstrap-fileinput.js"></script>

    <script src="~/AngularControllers/Services/UserRoleService.js"></script>
    <script src="~/AngularControllers/Services/MenuService.js"></script>
    <script src="~/AngularControllers/Services/UserService.js"></script>
    <script src="~/AngularControllers/Services/EnumService.js"></script>
    <script src="~/AngularControllers/Services/FixLicService.js"></script>
    <script src="~/AngularControllers/Services/FixtureService.js"></script>
    <script src="~/AngularControllers/Services/LicenseTypeService.js"></script>
    <script src="~/AngularControllers/Services/CompanyService.js"></script>
    <script src="~/AngularControllers/Controllers/CompanyController.js"></script>
}

@using MultiLanguage.ExtensionMethods

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div ng-controller="LicensesTypesController">

    <!--Header-->
    <div class="portlet light portlet-fit bordered col-md-12">
        <div class="portlet-title">
            <div class="caption font-dark-gray" style="color:#678098">
                <i class="fa fa-file-text-o font-dark-gray" style="color:#678098"></i>
                <span class="caption-subject bold uppercase">
                    @Html.Translate("licensesTypes")
                </span>
            </div>
            <div class="actions">
                <div class="btn-group btn-group-devided" data-toggle="buttons">
                    <a class="btn blue addnewuserbtn" data-toggle="modal" data-target="#AddLicenseType"
                       ng-click="popName=''">
                        @Html.Translate(" addLicenseType")
                    </a>
                </div>

            </div>
        </div>

        <div ng-show="RegisterCount==0">
            <h3 style="text-align: center;color:#678098">@Html.Translate("recordNotFoundforListing")</h3>
        </div>

        <!--Table Body-->
        <div class="portlet-body">
            <div class="table-scrollable table-scrollable-borderless" ng-show="RegisterCount>0">
                <div class="table-responsive">
                    <table class="table table-hover table-light" ng-table="TableParams" style="margin-bottom: 50px !important;">

                        <colgroup>
                            <col width="600" />
                            <col width="600" />
                        </colgroup>

                        <tbody>
                            <tr ng-repeat="_ in $data">
                                <td data-title="'@Html.Raw(Html.Translate("licenseTypeName"))'" filter="{ Name: 'text'}" sortable="'Name'">
                                    <div class="col-md-9">
                                        <input ng-model="_.Name" style="font-size: 14px;" type="text" class="form-control" value="{{ _.Name }}">
                                    </div>
                                </td>

                                <td>
                                    <div class="btn-group absoluteitem">
                                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="md-click-circle md-click-animate" style="height: 105px; width: 105px; top: -47.45px; left: 37.5px;"></span>@Html.Translate("transactions")
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li class="ms-hover">
                                                <a class="viewuserbtn" data-toggle="modal" @*data-target="#AddLicenseTypePopup"*@ ng-click="UpdateLicensesTypesConfirm(_)">
                                                    <i class="fa fa-edit "></i>@Html.Translate("update")
                                                </a>
                                            </li>
                                            <li class="ms-hover">
                                                <a class="addphone" title="Delete" data-toggle="modal" @*data-target="#floorDeletePopup"*@ ng-click="DeleteLicensesTypesConfirm(_)">
                                                    <i class="fa fa-phone "></i>@Html.Translate("delete")
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        </tbody>

                        <tfoot>
                            <tr>
                                <td colspan="6" class="no-margin no-padding">
                                    <span class="label label-primary" style="margin-left: -20px; font-size: 11px;">  @Html.Translate("totalNumberofRecords"): {{RegisterCount}}</span>
                                </td>
                            </tr>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <partial name="~/Views/Shared/Partials/LicensesTypes/AddLicensesTypePopup.cshtml" />
</div>


@section PageScript
    {
    <script src="~/AngularControllers/Services/LicenseTypeService.js"></script>
    <script src="~/AngularControllers/Controllers/LicensesTypesController.js"></script>
}
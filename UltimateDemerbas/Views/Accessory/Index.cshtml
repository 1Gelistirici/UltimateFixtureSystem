@using MultiLanguage.ExtensionMethods

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="AccessoryController">

    <div id="qrcode" class="hidden"></div>

    <!--Header-->
    <div class="portlet light portlet-fit bordered col-md-12">
        <div class="portlet-title">
            <div class="caption font-dark-gray" style="color:#678098">
                <i class="fa fa-keyboard-o font-dark-gray" style="color:#678098"></i>
                <span class="caption-subject bold uppercase">
                    @Html.Translate("accessories")
                </span>
            </div>
            <div class="actions">
                <div class="btn-group btn-group-devided" data-toggle="buttons">
                    <a class="btn blue addnewuserbtn" data-toggle="modal" data-target="#AddSituation">
                        @Html.Translate("addAccessory")
                    </a>
                </div>

            </div>
        </div>

        <div ng-show="RegisterCount==0">
            <h3 style="text-align: center;color:#678098">
                @Html.Translate("recordNotFoundforListing")
            </h3>
        </div>

        <!--Table Body-->
        <div class="portlet-body">
            <div class="table-scrollable table-scrollable-borderless" ng-show="RegisterCount>0">
                <div class="table-responsive">
                    <table class="table table-hover table-light" ng-table="TableParams" style="margin-bottom: 50px !important;">

                        <colgroup>
                            <col />
                            <col />
                            <col />
                            <col />
                            <col />
                            <col />
                            <col />
                        </colgroup>
                        <tbody>
                            <tr ng-repeat="_ in $data">

                                <td data-title="'@Html.Raw(Html.Translate("componentName"))'" filter='{ "Name": "text" }' sortable="'Name'">
                                    <input ng-model="_.Name" type="text" class="form-control">
                                </td>

                                <td data-title="'@Html.Raw(Html.Translate("piece"))'" filter="{ Piece: 'text'}" sortable="'Piece'">
                                    <input ng-model="_.Piece" type="number" class="form-control">
                                </td>

                                <td data-title="'@Html.Raw(Html.Translate("price"))'" filter="{ Price: 'text'}" sortable="'Price'">
                                    <input ng-model="_.Price" type="number" class="form-control">
                                </td>

                                <td data-title="'@Html.Raw(Html.Translate("bill"))'" filter="{ BillNo: 'number'}" sortable="'BillNo'">
                                    <select class="form-control" ng-model="_.BillNo" disabled>
                                        <option ng-repeat="x in Bills" type="number" ng-value="{{x.Id}}">{{x.BillNo}}</option>
                                    </select>
                                </td>

                                <td data-title="'@Html.Raw(Html.Translate("model"))'" filter="{ ModelNo: 'number'}" sortable="'ModelNo'">
                                    <select class="form-control" ng-model="_.ModelNo">
                                        <option ng-repeat="x in AccessoryModels" type="number" ng-value="{{x.Id}}">{{x.Name}}</option>
                                    </select>
                                </td>

                                <td data-title="'@Html.Raw(Html.Translate("category"))'" filter="{ CategoryNo: 'number'}" sortable="'CategoryNo'">
                                    <select class="form-control" ng-model="_.CategoryNo">
                                        <option ng-repeat="x in  Categories" type="number" ng-value="{{x.Id}}">{{x.Name}}</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="btn-group absoluteitem">
                                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                            <span class="md-click-circle md-click-animate" style="height: 105px; width: 105px; top: -47.45px; left: 37.5px;"></span>@Html.Translate("transactions")
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            <li class="ms-hover" ng-hide="_.Piece<=0" data-toggle="modal" data-target="#AddAssignment">
                                                <a class="viewuserbtn" data-toggle="modal" ng-click="SetPiece(_)">
                                                    <i class="fa fa-eject"></i>@Html.Translate("assign")
                                                </a>
                                            </li>
                                            <li class="ms-hover">
                                                <a class="viewuserbtn" title="Update" data-toggle="modal" ng-click="UpdateAccessoryConfirm(_)">
                                                    <i class="fa fa-edit"></i>@Html.Translate("update")
                                                </a>
                                            </li>
                                            <li class="ms-hover">
                                                <a class="addphone" title="Delete" data-toggle="modal" ng-click="DeleteAccessoryConfirm(_)">
                                                    <i class="fa fa-trash"></i>@Html.Translate("delete")
                                                </a>
                                            </li>
                                            <li class="ms-hover">
                                                <a class="addphone" title="Generate QRCode" ng-click="generateQRCode(_.Id)">
                                                    <i class="fa fa-qrcode"></i>@Html.Translate("generateQRCode")
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        </tbody>

                        <tfoot>
                            <tr>
                                <td colspan="6" class="no-margin no-padding">
                                    <span class="label label-primary" style="margin-left: -20px; font-size: 11px;"> @Html.Translate("totalNumberofRecords"): {{RegisterCount}}</span>
                                </td>
                            </tr>

                        </tfoot>

                    </table>
                </div>
            </div>
        </div>

    </div>


    <partial name="~/Views/Shared/Partials/Accessory/AddAccessoryPopup.cshtml" />
    <partial name="~/Views/Shared/Partials/Global/AddAssignmentPartial.cshtml" />
</div>

@section PageScript
    {
    <script src="~/Scripts/ThirdParty/qrcode.min.js"></script>
    <script src="~/AngularControllers/Services/BillService.js"></script>
    <script src="~/AngularControllers/Services/AccessoryModelService.js"></script>
    <script src="~/AngularControllers/Services/AssignmentService.js"></script>
    <script src="~/AngularControllers/Services/UserService.js"></script>
    <script src="~/AngularControllers/Services/CategoryService.js"></script>
    <script src="~/AngularControllers/Services/AccessoryService.js"></script>
    <script src="~/AngularControllers/Services/EnumService.js"></script>
    <script src="~/AngularControllers/Controllers/AssignmentController.js"></script>
    <script src="~/AngularControllers/Controllers/AccessoryController.js"></script>
}
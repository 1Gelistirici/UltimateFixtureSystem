<body class="login" ng-app="LoginApp" ng-controller="LoginController">
    <toaster-container toaster-options="{ 'time-out': 10000, 'close-button':true, 'close-button':true, 'position-class': 'toast-top-right' }">
    </toaster-container>



    <!-- BEGIN LOGO -->
    <div class="logo">
        <h4 class="bold" style="color:white;">
            ULTIMATE FIXTURE SYSTEM
        </h4>
    </div>
    <!-- END LOGO -->

    <div class="content">

        <!-- BEGIN LOGIN FORM -->
        <form name="LoginForm" class="login-form">
            <div class="form-title">
                <span class="form-title">@Html.Translate("welcome").</span>
                <span class="form-subtitle">@Html.Translate("pleaseLogin").</span>
            </div>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> @Html.Translate("enterAnyUsernameAndPassword.") </span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("company")</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="@Html.Raw(Html.Translate("company"))" name="company" ng-model="User.Company" required />
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("username")</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="@Html.Raw(Html.Translate("userName"))" name="username" ng-model="User.Username" required />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("password")</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="@Html.Raw(Html.Translate("password"))" name="password" ng-model="User.Password" required />
            </div>

            <div>
                <button class="btn red btn-block uppercase" ng-disabled="LoginForm.$invalid || LoginButton" ng-click="CheckUser()">@Html.Translate("login")</button>
                @*<button class="btn yellow btn-block uppercase" onclick="location.href='/Home/InfoPage'">Back Info Page</button>*@
            </div>
            <div class="form-actions">
                <div class="pull-left">
                    <label class="rememberme mt-checkbox mt-checkbox-outline">
                        <input type="checkbox" name="remember" value="1" ng-model="User.RememberMe" /> @Html.Translate("rememberMe")
                        <span></span>
                    </label>
                </div>
                <div class="pull-right forget-password-block">
                    <a href="javascript:;" id="forget-password" class="forget-password">@Html.Translate("forgotPassword")</a>
                </div>
            </div>

            <div class="create-account">
                <p>
                    <a href="javascript:;" class="btn-primary btn" id="register-btn">@Html.Translate("createAnAccount")</a>
                </p>
            </div>
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form name="ForgetForm" class="forget-form" ng-show="forgetForm">
            <div class="form-title">
                <span class="form-title">@Html.Translate("forgetPassword")</span>
                <span class="form-subtitle">@Html.Translate("enterYourE-mailToResetIt.")</span>
            </div>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="@Html.Raw(Html.Translate("company"))" ng-model="forgetCompany" required />
            </div>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="@Html.Raw(Html.Translate("username"))" ng-model="forgetUsername" required />
            </div>
            <div>
                <button type="button" id="back-btn" class="btn btn-default">@Html.Translate("back")</button>
                <button type="button" ng-disabled="ForgetForm.$invalid || forgetSendButton" class="btn btn-primary uppercase pull-right" ng-click="ForgetPassword();">@Html.Translate("send")</button>
                @*<b ng-if="forgetSendButton">{{second}} can be resent after seconds.</b>*@
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <form name="ResetPasswordForm" class="forget-form" ng-show="resetPasswordForm">
            <div class="form-title">
                <span class="form-title">@Html.Translate("resetPassword")</span>
                <span class="form-subtitle">@Html.Translate("Enter your e-mail to reset it.")</span>
            </div>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="@Html.Raw(Html.Translate("password"))" ng-model="password" required />
            </div>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="@Html.Raw(Html.Translate("tryPassword"))" ng-model="tryPassword" required />
            </div>
            <div class="form-group">
                <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="@Html.Raw(Html.Translate("code"))" ng-model="code" required />
            </div>
            <div>
                <button type="button" ng-disabled="resetPasswordForm.$invalid || resetSendButton" class="btn btn-primary uppercase pull-right" ng-click="ForgetPasswordChange();">@Html.Translate("changePassword")</button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->
        <!-- BEGIN REGISTRATION FORM -->

        <form name="registerForm" class="register-form">
            <div class="form-title">
                <span class="form-title">@Html.Translate("signUp")</span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("companyName")</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="@Html.Raw(Html.Translate("companyName"))" ng-model="register.CompanyName" required />
            </div>
            <p class="hint"> Enter your account details below: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("userName")</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="@Html.Raw(Html.Translate("userName"))" ng-model="register.UserName" required />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("name")</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="@Html.Raw(Html.Translate("name"))" ng-model="register.Name" required />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("surname")</label>
                <input class="form-control placeholder-no-fix" type="text" placeholder="@Html.Raw(Html.Translate("surname"))" ng-model="register.Surname" required />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("email")</label>
                <input class="form-control placeholder-no-fix" type="email" placeholder="@Html.Raw(Html.Translate("email"))" ng-model="register.Email" required />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Html.Translate("password")</label>
                <input class="form-control placeholder-no-fix" type="password" placeholder="@Html.Raw(Html.Translate("password"))" ng-model="register.Password" required />
            </div>
            <div class="form-group margin-top-20 margin-bottom-20">
                <label class="mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="tnc" required /> @Html.Translate("iAgreeToThe")
                    <a href="javascript:;">@Html.Translate("termsOfService")</a> &
                    <a href="javascript:;">@Html.Translate("privacyPolicy")</a>
                    <span></span>
                </label>
                <div id="register_tnc_error"> </div>
            </div>
            <div>
                <button type="button" id="register-back-btn" class="btn btn-default">@Html.Translate("back")</button>
                @*<a class="btn red uppercase pull-right" ng-disabled="registerForm.$invalid" ng-click="addCompany();">Submit</a>*@
                <a class="btn red uppercase pull-right" ng-disabled="registerForm.$invalid || isDisabledSubmitBtn" ng-click="nextValidation();">@Html.Translate("submit")</a>
            </div>
        </form>
        <!-- END REGISTRATION FORM -->

        <partial name="~/Views/Shared/Partials/User/LoginEmailPhoneValidationPopup.cshtml" />
    </div>

    <script src="~/Global/Functions.js"></script>

    <!-- END LOGIN -->
